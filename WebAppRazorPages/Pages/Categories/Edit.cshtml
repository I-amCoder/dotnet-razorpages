@page
@model WebAppRazorPages.Pages.Categories.EditModel
@{
    ViewData["Title"] = "Edit Category";
    Layout = "Layouts/_Admin";
}

<div class="Container">
    <div class="row">
        <div class="col-12">
            <a class="btn btn-danger" asp-page="/categories/index">Back</a>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="h2 text-primary">Add New Category</div>
            <form method="post">
                <input hidden asp-for="Category.Id" />
                <div class="card shadow border-0">
                    <div class="card-body">
                        <div asp-validation-summary="All" class="text-danger my-4"></div>
                        <div class="form-group mb-4">
                            <label class="form-label" asp-for="Category.Name"></label>
                            <input asp-for="Category.Name" class="form-control" />
                            <span asp-validation-for="Category.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label class="form-label" asp-for="Category.DisplayOrder"></label>
                            <input asp-for="Category.DisplayOrder" class="form-control" />
                            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-outline-success">Update</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>